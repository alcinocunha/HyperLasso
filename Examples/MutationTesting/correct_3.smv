MODULE main
VAR
    action: 0..2;
    beverage: 0..2;
    water: 0..3;
INIT
    beverage = 0 & water = 3
TRANS
    action = 0 & next(beverage) = beverage & next(water) = water |
    action = 1 & water > 0 & next(beverage) > 0 & next(water) = water - 1 |
    action = 1 & water = 0 & next(beverage) = 0 & next(water) = water |
    action = 2 & water = 0 & next(beverage) = 0 & next(water) = 3 |
    action = 2 & water > 0 & next(beverage) = beverage & next(water) = water
